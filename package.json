{
  "name": "eslint-plugin-copyright",
  "version": "1.0.0",
  "description": "Ensure files have up-to-date copyright notices. Supports Typescript + ESLint flat config.",
  "author": "John Cramb <john@ravenpunk.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/ravenpunk/eslint-plugin-copyright"
  },
  "license": "MIT",
  "keywords": [
    "eslint",
    "plugin",
    "copyright",
    "header",
    "license",
    "notice"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit -p tsconfig.json",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json,md}\"",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/cz-commitlint": "^19.8.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.25.1",
    "@types/eslint": "9.6.1",
    "@types/node": "^24.0.3",
    "@typescript-eslint/parser": "^8.30.1",
    "eslint": "9.29.0",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.31.0",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.8.1"
}
